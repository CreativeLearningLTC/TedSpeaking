{
  "name": "Speak English like Ted Talks",
  "description": "Practice English Speaking using Ted Talks made easy",
  "version": "1.1",

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "*://*/*" 
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "page_action" : {
    "default_icon": "icon16.png",
    "default_title": "Practice English using Ted Talks",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "manifest_version": 2
}

