{
  "name": "Speak English like Ted Talks",
  "description": "Practice English Speaking using Ted Talks made easy",
  "version": "2.0",

  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action" : {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Practice English using Ted Talks",
    "default_popup": "popup.html"
  },

  "manifest_version": 3
}

